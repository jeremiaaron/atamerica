<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArchivePageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Top Bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/arrowBack"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="-18dp"
                    app:srcCompat="@drawable/application_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/btnAccount"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/profile_icon"
                    android:onClick="moveToProfile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Event you might like -->
            <TextView
                android:id="@+id/eyml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eyml"
                android:fontFamily="@font/sf_pro_text_bold"
                android:textFontWeight="700"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="18dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/topBar"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Event You Might Like Scroll -->
            <HorizontalScrollView
                android:id="@+id/eymlContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/eyml"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/horizontalScroll_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/eymlImg1"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt1Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt1_unfolding" />

                    <ImageView
                        android:id="@+id/eymlImg2"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt2Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt2_margarita_theater" />

                    <ImageView
                        android:id="@+id/eymlImg3"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt3Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt3_sustainable_development" />

                    <ImageView
                        android:id="@+id/eymlImg4"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt4Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt4_ama" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Top Event -->
            <TextView
                android:id="@+id/topEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eyml"
                android:fontFamily="@font/sf_pro_text_bold"
                android:textFontWeight="800"
                android:textSize="18dp"
                android:paddingVertical="18dp"
                android:textColor="@color/black"
                android:layout_marginStart="19dp"
                app:layout_constraintTop_toBottomOf="@+id/eymlContainer"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Event You Might Like Scroll -->
            <HorizontalScrollView
                android:id="@+id/topEventContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/topEvent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scrollbars="none"
                android:paddingBottom="18dp">

                <LinearLayout
                    android:id="@+id/horizontalScroll_linear_top_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/topEventImg1"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt5Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt5_live_from_usa_mas" />

                    <ImageView
                        android:id="@+id/topEventImg2"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt6Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt6_enviropitch" />

                    <ImageView
                        android:id="@+id/topEventImg3"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt7Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt7_digital_marketing" />

                    <ImageView
                        android:id="@+id/topEventImg4"
                        android:layout_width="166dp"
                        android:layout_height="250dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:onClick="moveToEvt8Detail"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/evt8_live_from_usa_dc" />

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>