<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <View
        android:id="@+id/topLine"
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/gray"
        android:scaleType="fitXY"
        tools:ignore="SmallSp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clear_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Clear Filter"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/musicCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Music &amp; Culture" />

        <View
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/movieCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Movie Screening" />

        <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/educationCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="American Education and Skills" />

        <View
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/scienceCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Science, Technology, and Innovation" />

        <View
            android:id="@+id/divider4"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/democracyCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Democracy and Governance" />

        <View
            android:id="@+id/divider5"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/entrepreneurshipCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Entrepreneurship and Business" />

        <View
            android:id="@+id/divider6"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/artsCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Arts and Culture" />

        <View
            android:id="@+id/divider7"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/protectingCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Protecting Natural Resources" />

        <View
            android:id="@+id/divider8"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/womenCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="Women's Empowerment" />

        <View
            android:id="@+id/divider9"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/gray"
            android:scaleType="fitXY"
            tools:ignore="SmallSp" />

        <CheckBox
            android:id="@+id/ysealiCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:letterSpacing="0"
            android:background="?selectableItemBackground"
            app:buttonTint="@color/blue"
            android:layoutDirection="rtl"
            android:paddingLeft="5dp"
            android:text="YSEALI and Alumni" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Apply"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/blue" />

    </LinearLayout>


</LinearLayout>